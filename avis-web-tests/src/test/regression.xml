<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="regression" parallel="methods" verbose="1" thread-count="1">
    <listeners>
        <listener class-name="com.avis.qa.listeners.retry.AnnotationTransformer"></listener>
    </listeners>

    <parameter name="brand" value="Budget"/> <!-- <Possible values: Avis/Budget/Paylesscar -->
    <parameter name="domain" value="US"/>    <!-- <Possible values: US/CA/AU/NZ> -->
    <parameter name="environment" value="qa"/>    <!-- < Possible values : qa/uat1/qa2/www/load balancer ip> -->
    <parameter name="browser" value="chrome"/>
    <!-- <Possible values: chrome/firefox/safari/edge/pixel/iphone/ipad> -->
    <parameter name="docker" value="true"/>

    <test name="AVIS US Regression Tests on Chrome">

        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>

        <classes>
            <class name="com.avis.qa.ReservationTests" />
            <class name="com.avis.qa.LocationTests" />
            <class name="com.avis.qa.FrameworkTests" />
            <class name="com.avis.qa.MiscellaneousTests" />
        </classes>
    </test>


</suite>